<nav
  class="navbar navbar-expand-lg bg-primary"
  data-bs-theme="dark"
  style="padding-top: 0px; padding-bottom: 0px"
>
  <div class="container-fluid">
    <a class="navbar-brand TM-brand" id="sidebarCollapse">TASK MANAGER</a>
    <div class="collapse navbar-collapse" id="navbarColor01">
      <ul class="navbar-nav ms-auto">
        <li class="nav-item">
          <a
            href="<% if (user.hrrole === 'ADMIN') { %>
           /hris <% } else { %>
            /hris_user/<%= user.email %>
          <% } %>"
            class="nav-link nav-change"
          >
            <i class="fa-solid fa-fingerprint"></i>
          </a>
        </li>
        <% if (user) { %>
        <li class="nav-item">
          <a href="#" id="toggleSidebar" class="nav-link">
            <% if (user.image === "") { %>
            <img class="nav-img" src="../images/user.jpg" />
            <% } else { %>
            <img class="nav-img" src="../<%= user.image %>" />
            <% } %>
          </a>
        </li>
        <% } %>
      </ul>
    </div>
  </div>
</nav>

<!-- Sidebar -->
<div class="sidebar" id="sidebar">
  <div class="sidebar-body">
    <div class="sidebar-image">
      <div class="profile-image">
        <% if (user.image === "") { %>
          <img class="nav-img" src="../images/user.jpg" />
          <% } else { %>
          <img class="nav-img" src="../<%= user.image %>" />
          <% } %>
      </div>
      <div class="user-details">
        <a><%= user.name %></a>
        <a class="user-role"
          ><% if (user.hrrole === "ROLE 1") { %> Administrative Officer <% }
          else if (user.hrrole === "ROLE 2") { %> Senior Admin Assistant <% }
          else if (user.hrrole === "ROLE 3") { %> Admin Officer <% } else if
          (user.hrrole === "ROLE 4") { %> Admin Assistant <% } else if
          (user.hrrole === "ROLE 5") { %> Admin Aide <% } else if (user.hrrole
          === "ADMIN") { %> Department Head <% } else if (user.hrrole === "ADMIN2") { %> Department Head II <% } %></a
        >
      </div>
    </div>
    <div class="sidebar-menu">
      <div class="sidebar-buttons">
        <ul>
          <li>
            <% if (user.hrrole === "ADMIN") { %>
            <a href="/view/<%= user._id %>"
              ><i class="fa-solid fa-gear"></i>Account Settings</a
            >
            <% } else { %>
            <a href="/editacc/<%= encodeURIComponent(user.name) %>"
              ><i class="fa-solid fa-gear"></i>Account Settings</a
            >
            <% } %>
          </li>
          <% if (user.hrrole === "ROLE 5" && user.department === "HR Department") { %>
          <li>
            <a href="#">
              <i class="fa-solid fa-clock"></i>Employee DTR
            </a>
          </li>
          <% } %>
          <% if (user.hrrole === "ADMIN" && user.department === "HR Department") { %>
          <li>
            <a href="/hris_user/<%= user.email %>"
              ><i class="fa-solid fa-clock"></i>Personal HRIS</a
            >
          </li>
          <% } %>
          <li class="logout-button">
            <a href="#" id="logoutButton"
              ><i class="fa-solid fa-arrow-right-from-bracket"></i>Log Out</a
            >
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>
<div class="overlay" id="overlay"></div>
<div class="modal" id="logOutModal" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered modal-lg fade-in" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" style="font-weight: 800;">
          <% if (userAttendance.status === "IN") { %>
            TIME-IN in progress
          <% } else { %>
            LOG OUT
          <% } %>
        </h5>
      </div>
      <div class="modal-body">
        <% if (userAttendance.status === "IN") { %>
          <p>It looks like you're still timed-in. You need to time-out before you can log-out. Would you like to time-out now?</p>
        <% } else { %>
          <p>Are you sure you want to log-out?</p>
        <% } %>
      </div>
      <div class="modal-footer">
        <% if (userAttendance.status === "IN") { %>
          <button type="button" class="btn btn-primary" id="logoutConfirm" data-user-status="IN">TIME-OUT NOW</button>
        <% } else { %>
          <button type="button" class="btn btn-primary" id="logoutConfirm" data-user-status="OUT">CONFIRM</button>
        <% } %>
      </div>
    </div>
  </div>
</div>