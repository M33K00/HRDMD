<div class="col-md-4 hover-div-sp" >
    <a href="/document_tracker/<%= encodeURIComponent(user.hrrole) %>">
    <div class="card-start card border-primary mb-3 shadow startpage-font">
      <h3 class="card-header">Task Manager</h3>
      <div class="card-body">
        <h6 class="card-subtitle text-muted">
          <% if (user.hrrole != "ADMIN") { %>
            View and manage your tasks
          <% } else { %>
            Assign and manage tasks to employees
          <% } %>
        </h6>
      </div>
      <svg
        class="d-block user-select-none"
        width="100%"
        height="200"
        aria-label="Placeholder: File Icon"
        focusable="false"
        role="img"
        preserveAspectRatio="xMidYMid slice"
        viewBox="0 0 318 180"
        style="font-size: 1.125rem; text-anchor: middle"
      >
        <foreignObject width="100%" height="100%">
          <div class="svg-icon">
            <i class="fa-solid fa-list-check startpage-icon"></i>
          </div>
        </foreignObject>
      </svg>
      <div class="card-body">
        <p class="card-text"></p>
      </div>
    </a>
    </div>
  </div>
