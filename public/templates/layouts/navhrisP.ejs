<nav
  class="navbar navbar-expand-lg bg-primary navbar-shadow"
  data-bs-theme="dark"
  style="padding-top: 0px; padding-bottom: 0px"
>
  <div class="container-fluid">
    <a class="navbar-brand HR-brand" style="font-weight: 700;" id="sidebarCollapse">
      <% if (user.department === "Department 1") { %>
        PESO Department 
      <% } else if (user.department === "Department 2") { %> 
        CC Development Office 
      <% } else if (user.department === "Department 3") { %> 
        OAS Department 
      <% } else if (user.department === "Department 4") { %> 
        BTM Department 
      <% } else if (user.department === "Department 5") { %> 
        BPL Department 
      <% } else if (user.department === "Department 6") { %> 
        City Assessor's Office 
      <% } else if (user.department === "HR Department") { %> 
        HRIS Management
      <% } %>
    </a>
    <div class="collapse navbar-collapse" id="navbarColor01">
      <ul class="navbar-nav ms-auto">
        <% if (user.department === "HR Department") { %>
          <li class="nav-item">
            <a href="/home" class="nav-link nav-name active nav-change-hris">
              <i class="fa-solid fa-list-check"></i>
            </a>
          </li>
        <% } %>
        <% if (user) { %>
        <li class="nav-item">
          <a href="#" id="toggleSidebar" class="nav-link">
            <% if (user.image === "") { %>
              <img class="nav-img" src="../images/user.jpg" />
              <% } else { %>
              <img class="nav-img" src="../<%= user.image %>" />
            <% } %>
          </a>
        </li>
        <% } %>
      </ul>
    </div>
  </div>
</nav>

<!-- Sidebar -->
<div class="sidebar" id="sidebar">
  <div class="sidebar-body">
    <div class="sidebar-image">
      <div class="profile-image">
        <% if (user.image === "") { %>
          <img class="nav-img" src="../images/user.jpg" />
          <% } else { %>
          <img class="nav-img" src="../<%= user.image %>" />
        <% } %>
      </div>
      <div class="user-details">
        <a><%= user.name %></a>
        <a class="user-role"
          ><% if (user.hrrole === "ROLE 1") { %> Administrative Officer <% }
          else if (user.hrrole === "ROLE 2") { %> Senior Admin Assistant <% }
          else if (user.hrrole === "ROLE 3") { %> Admin Officer <% } else if
          (user.hrrole === "ROLE 4") { %> Admin Assistant <% } else if
          (user.hrrole === "ROLE 5") { %> Admin Aide <% } else if (user.hrrole
          === "ADMIN") { %> Department Head <% } else if (user.hrrole === "ADMIN2") { %> Department Head II <% } %>
          </a>
      </div>
    </div>
    <div class="sidebar-menu">
      <div class="sidebar-buttons">
        <ul>
          <li>
            <% if (user.hrrole === "ADMIN") { %>
            <a href="/view/<%= user._id %>"
              ><i class="fa-solid fa-gear"></i>Account Settings</a
            >
            <% } else { %>
            <a href="/view_profile/<%= user.email %>"
              ><i class="fa-solid fa-gear"></i>Account Settings</a
            >
            <% } %>
          </li>
          <% if (user.mEmp === true || user.mLeave === true || user.mDTR === true || user.hrrole === "ADMIN") { %>
          <li>
            <a href="/hris_user/<%= user.email %>"><i class="fa-solid fa-fingerprint"></i>HRIS Personal</a>
          </li>
          <% } %>
          <li class="logout-button">
            <a href="#" id="logoutButton"
              ><i class="fa-solid fa-arrow-right-from-bracket"></i>Log Out</a
            >
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>
<div class="overlay" id="overlay"></div>
<div class="page-bg-img"></div>
<div class="modal" id="logOutModal" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered modal-lg fade-in" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" style="font-weight: 800;">
            LOG OUT
        </h5>
      </div>
      <div class="modal-body">
          <p>Are you sure you want to log-out?</p>
      </div>
      <div class="modal-footer">
          <button type="button" class="btn btn-primary" id="logoutConfirm" data-user-status="OUT">LOG-OUT</button>
      </div>
    </div>
  </div>
</div>