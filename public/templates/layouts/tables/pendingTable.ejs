<h2 class="mt-3">Pending Files:</h2>
<% if (pendingFiles.length > 0) { %> <%# Search bar %>
<input
  class="form-control me-sm-2"
  type="text"
  id="filesInput"
  placeholder="Search"
  style="margin-bottom: 20px"
  oninput="searchTable2()"
/>
<table id="table" class="table table-hover table-striped">
  <thead>
    <tr class="table-dark">
      <th style="width: 150px">File Code</th>
      <th style="width: 250px">File Name</th>
      <th style="width: 200px">Assigned To</th>
      <th style="width: 200px">Date Submitted</th>
      <th style="width: 10px; padding-left: 30px">Action</th>
    </tr>
  </thead>
  <tbody>
    <% pendingFiles.forEach((file, index) => { %>
    <tr>
      <td><%= file.fileCode %></td>
      <td>
        <%= file.fileName.length > 25 ? file.fileName.substring(0, 25) + '...' :
        file.fileName %>
      </td>
      <td><%= file.assignTo %></td>
      <td><%= file.dateSubmitted.toISOString().split('T')[0] %></td>
      <td class="action-buttons">
        <a href="view_file/<%= file.id %>" class="icon-square"
          ><i class="fa-solid fa-eye"></i
        ></a>
        <a href="#" class="icon-square text-danger"
          ><i class="fa-solid fa-trash"></i
        ></a>
      </td>
    </tr>
    <% }); %>
  </tbody>
</table>

<% } else { %>
<p class="no-files">No files submitted this past 3 months.</p>
<% } %>
