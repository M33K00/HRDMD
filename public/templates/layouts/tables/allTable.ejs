<h2 class="mt-3">All Files:</h2>
<% if (submittedFiles.length > 0) { %> <%# Search bar %>
<input
  class="form-control me-sm-2"
  type="text"
  id="filesInput"
  placeholder="Search"
  oninput="searchTable2()"
/>
<table id="table" class="table table-hover table-striped mt-4">
  <thead>
    <tr class="table-dark">
      <th style="width: 250px">File Code</th>
      <th style="width: 250px">File Name</th>
      <th style="width: 200px">Assigned To</th>
      <th style="width: 200px">Date Submitted</th>
      <th style="width: 100px">Status</th>
      <th style="width: 10px; padding-left: 30px">Action</th>
    </tr>
  </thead>
  <tbody>
    <% submittedFiles.sort((a, b) => new Date(b.dateSubmitted) - new
    Date(a.dateSubmitted)).forEach((file, index) => { %>
    <tr>
      <td>
        <%= file.fileCode.length > 20 ? file.fileCode.substring(0, 20) + '...' :
        file.fileCode %>
      </td>
      <td>
        <%= file.fileName.length > 15 ? file.fileName.substring(0, 15) + '...' :
        file.fileName %>
      </td>
      <td><%= file.assignTo %></td>
      <td><%= file.dateSubmitted.toISOString().split('T')[0] %></td>
      <td>
        <% if (file.status === 'APPROVED') { %>
        <span class="badge bg-success">APPROVED</span>
        <% } else if (file.status === 'REJECTED') { %>
        <span class="badge bg-danger">REJECTED</span>
        <% } else if (file.status === 'PENDING') { %>
        <span class="badge bg-warning">PENDING</span>
        <% } else if (file.status === 'REVISION') { %>
        <span class="badge bg-dark">REVISION</span>
        <% } else { %>
        <span class="badge bg-primary">UNKNOWN</span>
        <% } %>
      </td>
      <td class="action-buttons">
        <a href="view_file/<%= file.id %>" class="icon-square text-dark"
          ><i class="fa-solid fa-eye"></i
        ></a>
        <a href="/archive_file/<%= file.id %>" class="icon-square text-warning" data-bs-toggle="modal" data-bs-target="#archiveModal1"
          ><i class="fa-solid fa-box-archive"></i>
        </a>
      </td>
    </tr>
    <!-- Modal for the "Archive" action -->
    <div class="modal fade" id="archiveModal1" tabindex="-1" aria-labelledby="archiveModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="archiveModalLabel">Confirm Archive</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <p>Are you sure you want to archive this file?</p>
          </div>
          <div class="modal-footer">
            <a href="/archive_file/<%= file.id %>" class="btn btn-warning">Archive</a>
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          </div>
        </div>
      </div>
    </div>
    <% }); %>
  </tbody>
</table>
<!-- Pagination Links -->
<div class="pagination justify-content-center">
  <% if (totalPages > 1) { %>
  <ul class="pagination justify-content-center">
    <% for (let i = 1; i <= totalPages; i++) { %>
    <li class="page-item <%= currentPage === i ? 'active' : '' %>">
      <a href="?page=<%= i %>" class="page-link"><%= i %></a>
    </li>
    <% } %>
  </ul>
  <% } %>
</div>
<% } else { %>
<p class="text-muted text-center">No files approved yet.</p>
<% } %>

