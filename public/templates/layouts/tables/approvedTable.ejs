<h2 class="mt-3">Approved Files:</h2>
<% const approvedFiles = submittedFiles.filter( (submittedFiles) =>
submittedFiles.status === "APPROVED" ) %> <% if (approvedFiles.length > 0) { %>
<%# Search bar %>
<input
  class="form-control me-sm-2"
  type="text"
  id="filesInput"
  placeholder="Search"
  style="margin-bottom: 20px"
  oninput="searchTable2()"
/>
<table id="table" class="table table-hover table-striped mt-5">
  <thead>
    <tr class="table-dark">
      <th style="width: 150px">File Code</th>
      <th style="width: 250px">File Name</th>
      <th style="width: 200px">Assigned To</th>
      <th style="width: 200px">Date Submitted</th>
      <th style="width: 10px; padding-left: 30px">Action</th>
    </tr>
  </thead>
  <tbody>
    <% approvedFiles.forEach(file => { %>
    <tr>
      <td><%= file.fileCode %></td>
      <td><%= file.fileName %></td>
      <td><%= file.assignTo %></td>
      <td><%= file.dateSubmitted.toISOString().split('T')[0] %></td>
      <td class="action-buttons">
        <a href="#" class="icon-square"><i class="fa-solid fa-eye"></i></a>
        <a href="#" class="icon-square text-danger"
          ><i class="fa-solid fa-trash"></i
        ></a>
      </td>
    </tr>
    <% }); %>
  </tbody>
</table>
<% } else { %>
<p class="text-muted text-center">No files approved yet.</p>
<% } %>
