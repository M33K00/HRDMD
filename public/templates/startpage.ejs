<%- include('./layouts/header') -%>
<body class="startbody">
  <%- include('./layouts/nav') -%>
  <div class="start-container">
    <div class="row">
      <div class="col-md-4 hover-div">
        <a href="home">
        <div class="card border-primary mb-3 shadow">
          <h3 class="card-header">Document Tracker</h3>
          <div class="card-body">
            <h6 class="card-subtitle text-muted">
              Track and manage documents effortlessly
            </h6>
          </div>
          <svg
            class="d-block user-select-none"
            width="100%"
            height="200"
            aria-label="Placeholder: File Icon"
            focusable="false"
            role="img"
            preserveAspectRatio="xMidYMid slice"
            viewBox="0 0 318 180"
            style="font-size: 1.125rem; text-anchor: middle"
          >
            <foreignObject width="100%" height="100%">
              <div class="svg-icon">
                <i
                  class="fa-solid fa-file"
                  style="color: #158cba; font-size: 100px"
                ></i>
              </div>
            </foreignObject>
          </svg>
          <div class="card-body">
            <p class="card-text"></p>
          </div>
        </a>
        </div>
      </div>
      <div class="col-md-4 hover-div">
        <a href="/hris">
        <div class="card border-primary mb-3 shadow">
          <h3 class="card-header">HR Information System</h3>
          <div class="card-body">
            <h6 class="card-subtitle text-muted">
              Streamline HR tasks with the HRIS page
            </h6>
          </div>
          <svg
            class="d-block user-select-none"
            width="100%"
            height="200"
            aria-label="Placeholder: Image cap"
            focusable="false"
            role="img"
            preserveAspectRatio="xMidYMid slice"
            viewBox="0 0 318 180"
            style="font-size: 1.125rem; text-anchor: middle"
          >
            <foreignObject width="100%" height="100%">
              <div class="svg-icon">
                <i
                  class="fa-solid fa-fingerprint"
                  style="color: #158cba; font-size: 100px"
                ></i>
              </div>
            </foreignObject>
          </svg>
          <div class="card-body">
            <p class="card-text"></p>
          </div>
        </a>
        </div>
      </div>
      <div class="col-md-4 hover-div">
        <a href="manage_accounts">
        <div class="card border-primary mb-3 shadow">
          <h3 class="card-header">Manage Accounts</h3>
          <div class="card-body">
            <h6 class="card-subtitle text-muted">
              Manage accounts and verify users
            </h6>
          </div>
          <svg
            class="d-block user-select-none"
            width="100%"
            height="200"
            aria-label="Placeholder: Image cap"
            focusable="false"
            role="img"
            preserveAspectRatio="xMidYMid slice"
            viewBox="0 0 318 180"
            style="font-size: 1.125rem; text-anchor: middle"
          >
            <foreignObject width="100%" height="100%">
              <div class="svg-icon">
                <i
                  class="fa-solid fa-user"
                  style="color: #158cba; font-size: 100px"
                ></i>
              </div>
            </foreignObject>
          </svg>
          <div class="card-body">
            <p class="card-text"></p>
          </div>
        </a>
        </div>
      </div>
    </div>
  </div>
</body>
<script src="../../scripts/jquery.min.js"></script>
<script src="../../scripts/datatables.js"></script>
<script src="https://kit.fontawesome.com/64cf43ccc2.js"></script>