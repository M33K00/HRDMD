<%- include('./layouts/login') -%>
  <body>
    <div class="video-container">
      <video autoplay loop muted>
          <source src="/images/bacoorvid.mp4" type="video/mp4">
          Your browser does not support the video tag.
      </video>
      <div id=bottom-left class="bottom-left-div">
        <div id="loadingCircle" class="loading-circle"></div>
      </div>
    </div>
    <div class="container">
      <div class="login form">    
        <div class="logo-container">
          <img src="/images/logo.png" class="logo-login" />
        </div>
        <header>Human Resources Department</header>
        <form>
          <input type="text" name="email" placeholder="Email" required />
          <div class="email-error mb-3"></div>
          <input type="password" name="password" placeholder="Password" required />
          <div class="password-error mb-3"></div>
          <input type="submit" class="button"/>
        </form>
        <div class="forgot-password mb-3">
          <a href="#" id="forgot-password-link" data-bs-toggle="modal" data-bs-target="#forgot-password-modal">Forgot Password?</a>
        </div>
        <div class="signup">
            <a href="signup">Signup</a>
        </div>
      </div>
    </div>
  </body>
  <div class="modal fade" id="forgot-password-modal" tabindex="-1" aria-labelledby="forgotPasswordModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="forgotPasswordModalLabel">Forgot Password?</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <p>Please contact the <strong>HR Department</strong> for assistance.</p>
        </div>
      </div>
    </div>
  </div>
</html>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
  // Optional: You can listen for the modal shown event to perform actions when the modal is opened
  const forgotPasswordModal = document.getElementById('forgot-password-modal');
  forgotPasswordModal.addEventListener('shown.bs.modal', function () {
    // Code to execute when the modal is shown
  });

  // Optional: You can also listen for the modal hidden event to perform actions when the modal is closed
  forgotPasswordModal.addEventListener('hidden.bs.modal', function () {
    // Code to execute when the modal is hidden
  });
</script>
