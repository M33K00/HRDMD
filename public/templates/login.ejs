<script>
  // Optional: You can listen for the modal shown event to perform actions when the modal is opened
  const forgotPasswordModal = document.getElementById('forgot-password-modal');
  forgotPasswordModal.addEventListener('shown.bs.modal', function () {
    // Code to execute when the modal is shown
  });

  // Optional: You can also listen for the modal hidden event to perform actions when the modal is closed
  forgotPasswordModal.addEventListener('hidden.bs.modal', function () {
    // Code to execute when the modal is hidden
  });

  // Carousel
  let slideIndex = 0;
  const autoSlideInterval = 8000; // Time in milliseconds (3 seconds)

  // Get all images
  const slides = document.querySelectorAll('.carousel-images img');
  const totalSlides = slides.length;

  // Automatically move to the next slide every 3 seconds
  let autoChange = setInterval(nextSlide, autoSlideInterval);

  // Show the first slide
  showSlide(slideIndex);

  function showSlide(index) {
    // Ensure all images are hidden by removing the 'active' class
    slides.forEach(slide => slide.classList.remove('active'));

    // Wrap around when reaching the last or first slide
    if (index >= totalSlides) {
      slideIndex = 0;
    } else if (index < 0) {
      slideIndex = totalSlides - 1;
    }

    // Add 'active' class to the current slide to make it visible
    slides[slideIndex].classList.add('active');
  }

  function nextSlide() {
    slideIndex++;
    showSlide(slideIndex);
  }

  function prevSlide() {
    slideIndex--;
    showSlide(slideIndex);
  }
</script>
