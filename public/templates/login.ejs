<%- include('./layouts/login') -%>
  <body>
    <div class="container">
      <input type="checkbox" id="check" />
      <div class="login form">
        <div class="logo-container">
          <img src="/images/logo.png" class="logo-login" />
        </div>
        <header>Human Resources Department</header>
        <form action="/login" method="post">
          <input type="text" name="name" placeholder="Name" />
          <input type="password" name="password" placeholder="Password" />
          <a href="/home">Bypass</a>
          <input type="submit" class="button" value="Login" />
        </form>
        <div class="signup">
          <span class="signup">Don't have an account?
            <label for="check">Signup</label>
          </span>
        </div>
      </div>
      <div class="registration form">
        <header>Signup</header>
        <h6 class="card-subtitle mb-2 text-muted">
          Create an account to start. Please note that the ADMIN will review
          your signup first before you can enter
        </h6>
        <form action="/signup" method="post">
          <input type="text" name="name" placeholder="Name" required />
          <input
            type="password"
            name="password"
            placeholder="Password"
            required
          />
          <div class="form-group">
            <label for="hrrole" class="form-label mt-4">HR Role</label>
            <select type="text" name="hrrole" class="form-select" id="hrrole">
              <option>ROLE 1</option>
              <option>ROLE 2</option>
            </select>
          </div>
          <input type="submit" class="button" />
        </form>
        <div class="signup">
          <span class="signup">Already have an account?
            <label for="check">Login</label>
          </span>
        </div>
      </div>
    </div>
  </body>
</html>