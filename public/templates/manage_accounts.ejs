<%- include('./layouts/header') -%>
<body>
  <%- include('./layouts/nav') -%> <%- include('./layouts/sidenav') %>
  <div class="page-body">
    <div class="page-name">
      <h1>Manage Accounts</h1>
      <div>
        <a href="addacc" class="btn-text" style="text-decoration: inherit;">
          <button type="button" class="btn btn-primary">
            <i class="fa-solid fa-plus"></i>
            ADD USER
          </button>
        </a>
      </div>
    </div>
    <input
      class="form-control me-sm-2"
      type="text"
      id="accInput"
      placeholder="Search"
      style="margin-bottom: 20px"
    />
    <div class="row my-4">
      <div class="col-lg-12">
        <% if (message) { %>
          <div class="alert alert-dismissible alert-success" role="alert">
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            <strong>Attention!</strong><%= message.message %><a href="#" class="alert-link"></a>.
          </div>
        <% } %>        
        <div>
          <% if (logincollections != '') { %>
            <table id="table" class="table table-hover table-striped text-center">
              <thead>
                <tr class="table-primary">
                  <th>Image</th>
                  <th>Name</th>
                  <th>Email</th>
                  <th>HR Role</th>
                  <th>Action</th>
                </tr>
                </tr>
                </tr>
              </thead>
              <tbody>
                <% logincollections.forEach((row, index) => { %>
                  <tr>
                    <td><img src="<%= row.image %>" width="50" class="img-thumbnail"></td>
                    <td><%= row.name %></td>
                    <td><%= row.email %></td>
                    <td><%= row.hrrole %></td>
                    <td>
                      <a href="/edit/<%= row._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1 my-2"></i></a>
                      <a href="/delete/<%= row._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1 my-2"></i></a>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          <% } else { %>
            <h1 class="text-center text-secondary mt-5">No Users found in database</h1>
            <% } %>
        </div>
      </div>
    </div>
  </div>
<%- include('./layouts/footer') -%>