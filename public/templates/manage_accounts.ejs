<%- include('./layouts/header') -%>
<body>
  <%- include('./layouts/nav') -%> <%- include('./layouts/sidenav') %>
  <div class="page-body2">
    <div class="page-name">
      <h1>Application Accounts Management</h1>
      <div>
        <a href="addacc" class="btn-text" style="text-decoration: inherit;">
          <button type="button" class="btn btn-primary">
            <i class="fa-solid fa-plus"></i>
            ADD ACCOUNT
          </button>
        </a>
      </div>
    </div>
    <p class="page-description text-muted ">This page manages the accounts registered on this app. If you want to manage HR accounts, please head to HRIS Section</p>
    <p class="page-description text-muted ">Accounts made in this page will also create an account in HRIS</p>      <div class="col-lg-12">
      <% if (message) { %>
        <div
          class="alert alert-dismissible alert-<%= message.type %> fade show"
          role="alert"
          id="autoDismissAlert"
        >
        <strong>Attention!</strong><%= message.message %><a
          href="#"
          class="alert-link"
          ></a>
      </div>
      <% } %>        
    </div> <%# Search bar %>
    <input
      class="form-control me-sm-2"
      type="text"
      id="searchInput"
      placeholder="Search"
      style="margin-bottom: 20px"
    />
    <h4 class="folder-title mb-3 mt-3">All Accounts</h4>
    <div class="page-container-acc">
      <% if (logincollections.length > 0) { %> <% logincollections.forEach(row =>
        { %>
        <div class="page-item">
          <div class="card mb-3 account-card">
            <a
              href="/view/<%= row._id %>"
              class="hover-div-acc"
            >
              <div
                class="imageacc-preview"
                style="
                  background-image: url('../<%= row.image %>');
                  background-size: cover;
                "
              ></div>
            </a>
            <div
              class="card-header card-documents-options card-header-font d-flex justify-content-between align-items-center"
            >
              <span class="card-text-name"><%= row.name %></span>
            </div>
            <div
              class="card-footer card-options file-date"
              style="font-weight: 600"
            >
              <% if (row.hrrole === "ROLE 1") { %> Entry-level <% } else if
              (row.hrrole === "ROLE 2") { %> Individual Contributors <% } else if
              (row.hrrole === "ROLE 3") { %> HR Manager <% } else if (row.hrrole
              === "ROLE 4") { %> HR Director <% } else if (row.hrrole === "ADMIN")
              { %> ADMIN <% } %>
            </div>
            <div class="card-footer card-options account-footer" style="font-weight: 600"><%= row.department %></div>
            <div class="card-footer card-options account-footer"><%= row.email %></div>
          </div>
        </div>
        <% }); %> <% } else { %>
        <p>No files found.</p>
        <% } %>
    </div>
  </div>
</body>
<%- include('./layouts/footer') -%>
