        <div class="password-error"></div>
        <p class="text-muted" style="font-size: small; font-style: italic;">Upon creating your account, you will be asked to finish your profile once the department verifies your account.</p>
        <input type="hidden" name="hrrole" value="NO ROLE" />
        <input type="submit" class="button" value="SIGN UP" />
      </form>
      <div class="signup">
        <a href="login">LOGIN</a>
      </div>
    </div>
  </div>
</body>
<script>
    // Carousel
    let slideIndex = 0;
  const autoSlideInterval = 8000; // Time in milliseconds (3 seconds)

  // Get all images
  const slides = document.querySelectorAll('.carousel-images img');
  const totalSlides = slides.length;

  // Automatically move to the next slide every 3 seconds
  let autoChange = setInterval(nextSlide, autoSlideInterval);

  // Show the first slide
  showSlide(slideIndex);

  function showSlide(index) {
    // Ensure all images are hidden by removing the 'active' class
    slides.forEach(slide => slide.classList.remove('active'));

    // Wrap around when reaching the last or first slide
    if (index >= totalSlides) {
      slideIndex = 0;
    } else if (index < 0) {
      slideIndex = totalSlides - 1;
    }

    // Add 'active' class to the current slide to make it visible
    slides[slideIndex].classList.add('active');
  }

  function nextSlide() {
    slideIndex++;
    showSlide(slideIndex);
  }

  function prevSlide() {
    slideIndex--;
    showSlide(slideIndex);
  }
</script>
